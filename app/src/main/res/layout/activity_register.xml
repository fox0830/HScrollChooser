<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".UI.Account.RegisterActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/register"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_right_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_logo" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/low_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/tv_step_2"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_step"
            android:gravity="center|top"
            android:paddingTop="4dp"
            android:text="@string/input_ing"
            android:textColor="@color/high_green"
            app:layout_constraintBottom_toTopOf="@+id/view3"
            app:layout_constraintStart_toStartOf="@+id/view3" />

        <TextView
            android:id="@+id/tv_step_3"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_step"
            android:gravity="center|top"
            android:paddingTop="4dp"
            android:text="@string/write_ing"
            android:textColor="@color/high_green"
            app:layout_constraintBottom_toTopOf="@+id/view6"
            app:layout_constraintStart_toStartOf="@+id/view6" />

        <View
            android:id="@+id/view34"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/oval_green_border"
            app:layout_constraintBottom_toBottomOf="@+id/v_step_line2"
            app:layout_constraintEnd_toStartOf="@+id/v_step_line1"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/v_step_line2" />

        <View
            android:id="@+id/view8"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/oval_green_border"
            app:layout_constraintBottom_toBottomOf="@+id/v_step_line2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/v_step_line3"
            app:layout_constraintTop_toTopOf="@+id/v_step_line2" />

        <View
            android:id="@+id/view6"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/oval_green_border"
            app:layout_constraintBottom_toBottomOf="@+id/v_step_line2"
            app:layout_constraintStart_toEndOf="@+id/v_step_line2"
            app:layout_constraintTop_toTopOf="@+id/v_step_line2" />

        <View
            android:id="@+id/v_step_line3"
            android:layout_width="76dp"
            android:layout_height="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/dash_line_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view6"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_step_line1"
            android:layout_width="76dp"
            android:layout_height="1.5dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/high_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view3"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/oval_green_border"
            app:layout_constraintBottom_toBottomOf="@+id/v_step_line2"
            app:layout_constraintEnd_toStartOf="@+id/v_step_line2"
            app:layout_constraintTop_toTopOf="@+id/v_step_line2" />

        <View
            android:id="@+id/v_step_line2"
            android:layout_width="76dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/dash_line_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_step_1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_step"
            android:gravity="center|top"
            android:paddingTop="4dp"
            android:text="@string/write_code"
            android:textColor="@color/high_green"
            app:layout_constraintBottom_toTopOf="@+id/view34"
            app:layout_constraintStart_toStartOf="@+id/view34" />

        <View
            android:id="@+id/v_step_2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/oval_green"
            app:layout_constraintBottom_toBottomOf="@+id/view3"
            app:layout_constraintEnd_toEndOf="@+id/view3"
            app:layout_constraintStart_toStartOf="@+id/view3"
            app:layout_constraintTop_toTopOf="@+id/view3" />

        <View
            android:id="@+id/v_step_1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/oval_green"
            app:layout_constraintBottom_toBottomOf="@+id/view34"
            app:layout_constraintEnd_toEndOf="@+id/view34"
            app:layout_constraintStart_toStartOf="@+id/view34"
            app:layout_constraintTop_toTopOf="@+id/view34" />

        <View
            android:id="@+id/v_step_3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/oval_green"
            app:layout_constraintBottom_toBottomOf="@+id/view6"
            app:layout_constraintEnd_toEndOf="@+id/view6"
            app:layout_constraintStart_toStartOf="@+id/view6"
            app:layout_constraintTop_toTopOf="@+id/view6" />

        <View
            android:id="@+id/v_step_4"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/oval_green"
            app:layout_constraintBottom_toBottomOf="@+id/view8"
            app:layout_constraintEnd_toEndOf="@+id/view8"
            app:layout_constraintStart_toStartOf="@+id/view8"
            app:layout_constraintTop_toTopOf="@+id/view8" />
    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_step1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <include layout="@layout/view_register1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_step2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <include layout="@layout/view_register2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_step3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/view_register3" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>