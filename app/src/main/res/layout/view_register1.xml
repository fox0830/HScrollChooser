<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@color/fb"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/color_6b"
            android:textSize="14sp"
            android:text="@string/id_or_tel" />

        <EditText
            android:id="@+id/et_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:ems="10"
            android:lines="1"
            android:inputType="number"
            android:textColor="@color/color_6b"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@color/fb"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/ver_code"
            android:textSize="14sp"
            android:textColor="@color/color_6b" />

        <EditText
            android:id="@+id/et_vercode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:lines="1"
            android:background="@color/transparent"
            android:ems="10"
            android:inputType="numberSigned"
            android:textColor="@color/color_6b"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_get_ver_code"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:textSize="14sp"
            android:text="@string/get_ver_code"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@color/fb"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="14sp"
            android:text="@string/password"
            android:textColor="@color/color_6b" />

        <EditText
            android:id="@+id/et_psw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:lines="1"
            android:background="@color/transparent"
            android:ems="10"
            android:inputType="textWebPassword"
            android:textColor="@color/color_6b"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@color/fb"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="14sp"
            android:text="@string/confirm_password"
            android:textColor="@color/color_6b" />

        <EditText
            android:id="@+id/et_confirm_psw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:lines="1"
            android:background="@color/transparent"
            android:ems="10"
            android:inputType="textWebPassword"
            android:textColor="@color/color_6b"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@color/fb"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="14sp"
            android:text="@string/merchant_num"
            android:textColor="@color/color_6b" />

        <EditText
            android:id="@+id/et_merchant"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:lines="1"
            android:background="@color/transparent"
            android:ems="10"
            android:inputType="textEmailSubject"
            android:textColor="@color/color_6b"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/yellow_btn"
        android:gravity="center"
        android:textSize="15sp"
        android:text="@string/confirm"
        android:textColor="@color/white"/>
</LinearLayout>