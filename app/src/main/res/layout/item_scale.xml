<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="8dp"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <View
        android:id="@+id/v_scale"
        android:layout_width="0.8dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_d2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/v_min_scale"
        android:layout_width="0.8dp"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_d2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_scale_value"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:lines="1"
        android:text="100"
        app:layout_constraintEnd_toEndOf="@+id/v_scale"
        app:layout_constraintStart_toStartOf="@+id/v_scale"
        app:layout_constraintTop_toBottomOf="@+id/v_scale" />
</android.support.constraint.ConstraintLayout>